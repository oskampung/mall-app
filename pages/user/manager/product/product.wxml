<view class="product-page"><textarea data-event-opts="{{[['input',[['__set_model',['$0','title','$event',[]],['formData']]]]]}}" class="top-input" value="{{formData.title}}" bindinput="__e"></textarea><view class="container"><view class="title-wrap"><text class="title required">{{"商品主图（"+formData.masterImgs.length+"/"+masterMaxCount+"）"}}</text></view><view class="img-list"><block wx:if="{{formData.masterImgs.length<masterMaxCount}}"><view data-event-opts="{{[['tap',[['chooseImage',['masterImgs']]]]]}}" class="img-item add-img" bindtap="__e"><view class="icon tianjia _i"></view></view></block><block wx:for="{{formData.masterImgs}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view data-event-opts="{{[['tap',[['previewImage',[index,'masterImgs']]]]]}}" class="img-item" bindtap="__e"><image class="img-item__img" src="{{item}}" mode="aspectFill"></image><text class="img-item__tip">系统样品</text><block wx:if="{{index==0}}"><text class="img-item__cover">封面</text></block></view></block></block></view></view><view class="container"><view class="title-wrap"><text class="title required">商品详情</text><block wx:if="{{formData.detailList.length}}"><view data-event-opts="{{[['tap',[['toEditDetail',['$event']]]]]}}" class="right-btn" bindtap="__e"><text class="text">去编辑</text><view class="icon xiangyou _i"></view></view></block></view><view class="img-list"><view data-event-opts="{{[['tap',[['chooseDetailImg',['$event']]]]]}}" class="img-item add-img" bindtap="__e"><view class="icon tianjia _i"></view></view><block wx:for="{{formData.detailImgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="img-item"><image class="img-item__img" src="{{item.value}}" mode="aspectFill"></image></view></block></block></view></view><view class="container"><view class="title-wrap"><text class="title">分类</text><view class="right-btn"><text class="{{['text',[(!formData.category)?'disabled':'']]}}">请选择分类</text><view class="icon xiangyou _i"></view></view></view></view><view class="container"><view class="tab-list"><text class="{{['tab-item',[(tabIndex==0)?'active':'']]}}">普通商品</text><text data-event-opts="{{[['tap',[['toSpecification',['$event']]]]]}}" class="{{['tab-item',[(tabIndex==1)?'active':'']]}}" bindtap="__e">多型号商品</text><text class="{{['tab-item',[(tabIndex==2)?'active':'']]}}">限时购商品</text><text class="{{['tab-item',[(tabIndex==3)?'active':'']]}}">特殊商品</text></view><view class="list-view"><view class="list-item"><text class="label">零售价：</text><text class="value">{{$root.f0}}</text><view class="icon xiangyou _i"></view></view><view data-event-opts="{{[['tap',[['toggleInfinite',['$event']]]]]}}" class="list-item" bindtap="__e"><text class="label">库存：</text><text class="value">1</text><view class="{{['radio-btn',[(formData.infinite)?'check':'']]}}"><text>无限库存</text></view></view></view></view><cover-view class="submit-wrap"><button data-event-opts="{{[['tap',[['onSubmit',['$event']]]]]}}" class="submit-btn" bindtap="__e">确定发布</button></cover-view></view>